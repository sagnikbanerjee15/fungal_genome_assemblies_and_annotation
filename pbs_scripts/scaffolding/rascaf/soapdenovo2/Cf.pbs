#SBATCH --output=/project/maizegdb/sagnik/3_fungal_genomes/scaffolding/soapdenovo2_rascaf/Cf.output 
#SBATCH --error=/project/maizegdb/sagnik/3_fungal_genomes/scaffolding/soapdenovo2_rascaf/Cf.error

module load singularity
FUNGAL_SPECIES="Cf"
mkdir -p /project/maizegdb/sagnik/3_fungal_genomes/${FUNGAL_SPECIES}/scaffolding/soapdenovo2_rascaf/${FUNGAL_SPECIES}

cwltool \
--singularity \
--outdir /project/maizegdb/sagnik/3_fungal_genomes/scaffolding/soapdenovo2_rascaf/${FUNGAL_SPECIES} \
/project/maizegdb/sagnik/tools_and_pipelines/rascaf/1.0.2/perform_scaffolding_rascaf.cwl \
--threads 72 \
--raw_assembly_filename /project/maizegdb/sagnik/3_fungal_genomes/genome_assembly/soapdenovo2/${FUNGAL_SPECIES}/soapdenovo127mer_output.scafSeq \
--raw_input_files_pair1 /project/maizegdb/sagnik/3_fungal_genomes/RNA-seq/${FUNGAL_SPECIES}/merged_1.fastq \
--raw_input_files_pair2 /project/maizegdb/sagnik/3_fungal_genomes/RNA-seq/${FUNGAL_SPECIES}/merged_2.fastq \
1> /project/maizegdb/sagnik/3_fungal_genomes/scaffolding/soapdenovo2_rascaf/${FUNGAL_SPECIES}.output \
2> /project/maizegdb/sagnik/3_fungal_genomes/scaffolding/soapdenovo2_rascaf/${FUNGAL_SPECIES}.error